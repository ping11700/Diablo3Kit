<Window
    x:Class="Diablo3Kit.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Diablo3Kit"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Diablo3Kit"
    Width="360"
    Height="300"
    d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Height="20"
            HorizontalAlignment="Center"
            FontWeight="Bold"
            Text="总开关 '~'" />
        <UniformGrid
            Grid.Row="1"
            Background="Coral"
            Rows="7">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <CheckBox />
                <TextBlock Width="60" Text="  技能一" />
                <TextBox Width="32" Text="Q" />
                <TextBlock Margin="10,0" Text="间隔:" />
                <TextBox Width="32" Text="500" />
                <TextBlock Text="ms" />
            </StackPanel>
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <CheckBox />
                <TextBlock Width="60" Text="  技能二" />
                <TextBox Width="32" Text="W" />
                <TextBlock Margin="10,0" Text="间隔:" />
                <TextBox Width="32" Text="500" />
                <TextBlock Text="ms" />
            </StackPanel>
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <CheckBox />
                <TextBlock Width="60" Text="  技能三" />
                <TextBox Width="32" Text="E" />
                <TextBlock Margin="10,0" Text="间隔:" />
                <TextBox Width="32" Text="500" />
                <TextBlock Text="ms" />
            </StackPanel>
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <CheckBox />
                <TextBlock Width="60" Text="  技能四" />
                <TextBox Width="32" Text="R" />
                <TextBlock Margin="10,0" Text="间隔:" />
                <TextBox Width="32" Text="500" />
                <TextBlock Text="ms" />
            </StackPanel>
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <CheckBox />
                <TextBlock Width="60" Text="  左键" />
                <TextBox
                    Width="32"
                    IsEnabled="False"
                    Text="LB" />
                <TextBlock Margin="10,0" Text="间隔:" />
                <TextBox Width="32" Text="500" />
                <TextBlock Text="ms" />
            </StackPanel>
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <CheckBox />
                <TextBlock Width="60" Text="  右键:" />
                <TextBox
                    Width="32"
                    IsEnabled="False"
                    Text="RB" />
                <TextBlock Margin="10,0" Text="间隔:" />
                <TextBox Width="32" Text="500" />
                <TextBlock Text="ms" />
            </StackPanel>
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <CheckBox />
                <TextBlock Width="60" Text="  药瓶:" />
                <TextBox Width="32" Text="1" />
                <TextBlock Margin="10,0" Text="间隔:" />
                <TextBox Width="32" Text="500" />
                <TextBlock Text="ms" />
            </StackPanel>
        </UniformGrid>
    </Grid>
</Window>
